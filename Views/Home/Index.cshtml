@using Microsoft.AspNetCore.Identity
@using EmpregaSENAI.Areas.Identity.Data


@inject SignInManager<EmpregaSENAI.Models.Users> SignInManager
@inject UserManager<EmpregaSENAI.Models.Users> UserManager
@{
    ViewData["Title"] = "Tela inical";
}

<div class="text-center">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                @if (UserManager.GetUserAsync(User).Result.Img != null)
                {
                    <img style="object-fit:cover; border-radius:30px" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.Img))">
                }
            </div>
            <div class="carousel-item">
                @if (UserManager.GetUserAsync(User).Result.Img != null)
                {
                    <img style="object-fit:cover; border-radius:30px" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.Img))">
                }
            </div>
            <div class="carousel-item">
                @if (UserManager.GetUserAsync(User).Result.Img != null)
                {
                    <img style="object-fit:cover; border-radius:30px" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.Img))">
                }
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
